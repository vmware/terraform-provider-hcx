fmtcheck:
	@sh -c "'$(CURDIR)/scripts/gofmtcheck.sh'"

lint:
	@echo "==> Checking source code against linters..."
	@golangci-lint run

build: fmtcheck
	go install

init:
	go build -o terraform-provider-hcx
	terraform init